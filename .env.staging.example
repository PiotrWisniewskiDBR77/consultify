# Staging Environment Configuration
# Copy this file to .env.staging and fill in the values

NODE_ENV=staging

# Frontend URL (staging domain)
FRONTEND_URL=https://staging.consultify.app

# Database (separate staging database)
DATABASE_URL=postgresql://user:password@staging-db-host:5432/consultify_staging

# JWT Configuration (use different secret than production!)
JWT_SECRET=staging-jwt-secret-change-this
JWT_EXPIRES_IN=1h

# MFA Encryption (use different key than production!)
MFA_ENCRYPTION_KEY=staging-mfa-key-32-bytes-hex-here

# AI Provider Keys (can use same as production or separate)
GOOGLE_AI_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Stripe (use TEST mode keys!)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Email (can use same as production or a test service like Mailtrap)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@staging.consultify.app

# Redis (optional, for rate limiting and queues)
REDIS_URL=redis://localhost:6379

# Sentry (separate DSN for staging)
SENTRY_DSN=
VITE_SENTRY_DSN=

# Feature Flags (staging-specific)
ENABLE_DEBUG_LOGGING=true
DISABLE_RATE_LIMITING=false

# Railway-specific (if deploying to Railway)
RAILWAY_ENVIRONMENT=staging
